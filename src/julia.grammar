@precedence {
  quote @left
  dot @left
  primary @right
  where @left // Inner `where`
  decl @left
  power @right
  unary @right
  juxt @right
  bitshift @left
  rational @left
  times @left
  plus @left
  colon @left
  pipe-right @left
  pipe-left @right
  comparison @left
  lazy-and @right
  lazy-or @right
  arrow @right
  ternary @right
  pair @right
  afunc @right
  vec
  tup // Comma outside parentheses (OpenTuple)
  assignment @right
  simple @right
  mat
  macro
  sig @right // FIXME
}

@skip { _ws | LineComment | BlockComment }

@top Program { _t* block? }

// blocks don't include a terminator at the start because some statements
// require them (e.g. LetStatement) and others don't (e.g. BeginStatement).
block { top-level (_t+ top-level)* _t* }

top-level { expr | OpenAssignment | OpenTuple }

// OpenTuples cannot be nested, so they're not considered expressions.
OpenTuple { expr (!tup ',' expr)+ }

// Assignments inside blocks, including top-level.
OpenAssignment[@name=Assignment] {
  (primary-expr | operation | Operator | OpenTuple)
  !assignment (eq-operator | assignment-operator | tilde-operator) !assignment
  top-level
}

// Assignments inside brackets cannot contain OpenTuples.
binding<alias> {
  [@name={alias}] {
      (primary-expr | operation | Operator)
      !assignment (eq-operator | assignment-operator | tilde-operator) !assignment
      (expr | binding<'Assignment'>)
  }
}

// Almost everything else is an expression.
expr {
  ( simple-statement
  | compound-statement
  | definition
  | primary-expr
  | operation
  | OpenMacrocallExpression
  | ArrowFunctionExpression
  | JuxtapositionExpression
  | TernaryExpression
  | Operator ~op-as-id
  | FloatLiteral
  | IntegerLiteral
  )
}

// STATEMENTS

// Allow keywords as identifiers when necessary.
kw[@dynamicPrecedence=1]<term> { @extend[@name={term},group='keyword']<Identifier, term> }

end { kw<'end'> }

ImportPath { ('.'+ immediateIdentifier)? Identifier (!dot immediateDot '.' Identifier)* }
ImportAlias { importable kw<'as'> exportable }

exportable { Identifier | MacroIdentifier | Operator | parens<exportable> }
importable { ImportPath | MacroIdentifier | Operator | parens<exportable> }

import-list { sep1<(!tup ','), (importable | ImportAlias)> }
SelectedImport[@dynamicPrecedence=1] { ImportPath immediateColon ':' import-list }

simple-statement {
  ( BreakStatement { kw<'break'> }
  | ContinueStatement { kw<'continue'> }
  | ReturnStatement { kw<'return'> (!simple top-level)? }
  | ConstStatement  { kw<'const'>  !simple OpenAssignment }
  | GlobalStatement { kw<'global'> !simple top-level }
  | LocalStatement  { kw<'local'>  !simple top-level }
  | ExportStatement { kw<'export'> !simple sep1<(!tup ','), exportable> }
  | ImportStatement { (kw<'import'> | kw<'using'>) !simple (import-list | SelectedImport) }
  // TODO: `public`
  )
}

Condition { expr _t* }
ElseIfClause  { kw<'elseif'> Condition block? }
ElseClause    { kw<'else'> _t* block? }
CatchClause   { kw<'catch'> _t* block? } // TODO: ExceptionCapture
FinallyClause { kw<'finally'> _t* block? }

compound-statement {
  ( BeginStatement { kw<'begin'> _t* block? end }
  | QuoteStatement { kw<'quote'> _t* block? end }
  | WhileStatement { kw<'while'> Condition block? end }
  | ForStatement { kw<'for'> sep1<',', ForBinding> ~gen-or-for _t* block? end }
  | LetStatement { kw<'let'> sep1<',', LetBinding { binding<'Assignment'> | Identifier }>? _t+ block? end }
  | IfStatement  { kw<'if'> Condition block? ElseIfClause* ElseClause? end }
  | TryStatement { kw<'try'> _t* block? (CatchClause ElseClause?)? FinallyClause? end }
  )
}

TypeHead { primary-expr | BinaryExpression }

// TODO: Fix anonymous functions
definition {
  ( AbstractDefinition { kw<'abstract'> kw<'type'> TypeHead end }
  | PrimitiveDefinition { kw<'primitive'> kw<'type'> TypeHead IntegerLiteral end }
  | StructDefinition { kw<'mutable'>? kw<'struct'> TypeHead (_t+ block?)? end } // TODO: Allow skipping terminator
  | ModuleDefinition { (kw<'module'> | kw<'baremodule'>) Identifier _t* block? end }
  | MacroDefinition { kw<'macro'> Signature { CallExpression } _t* block? end }
  | FunctionDefinition { kw<'function'> (Signature { Identifier } | Signature { !sig (CallExpression | TupleExpression | BinaryExpression) } _t* block?) end }
  )
}


// PRIMARY EXPRESSIONS

primary-expr {
  ( Identifier
  | BoolLiteral { @specialize<Identifier, 'true' | 'false'> }
  | CharLiteral
  | Symbol
  | string
  | array
  | BraceExpression
  | ParenExpression
  | TupleExpression
  | AdjointExpression { primary-expr !primary immediateQuote "'" }
  | FieldExpression { primary-expr !dot immediateDot '.' (Identifier | Symbol | QuoteExpression | string) }
  | IndexExpression { primary-expr !primary immediateBracket array }
  | ParametrizedExpression { primary-expr !primary immediateBrace BraceExpression }
  | CallExpression
  | ClosedMacrocallExpression
  | InterpExpression
  | QuoteExpression
  )
}

sep<delim, rule> { (rule (delim rule)* delim?)? }
sep1<delim, rule> { rule (delim rule)* }

BraceExpression { '{' sep<',', expr | binding<'Assignment'>> '}' }
ParenExpression { '(' sep1<';', (expr | binding<'Assignment'> | Generator)> ')' }

// Parentheses where multiple expressions are not allowed.
parens[@name=ParenExpression]<x> { '(' x ')' }

tuple<x> {
  '('
  ( (x ',')
  | (x (',' x)+ ','?)
  | ';' sep<',', x>
  )?
  ')'
}
TupleExpression { tuple<expr | binding<'NamedField'>> }

// NOTE: binding `in` is a keyword, membership `in` is a function
ForBinding { kw<'outer'>? (Identifier | TupleExpression) !assignment ('=' | '∈' | kw<'in'>) expr }
GenFor { kw<'for'> sep1<!tup ',', ForBinding> }
GenFilter { kw<'if'> expr }
Generator { expr !simple GenFor ~gen-or-for (GenFor | GenFilter)* }

MatrixRow { (!mat expr)+ }

array {
  ( ComprehensionExpression { '[' Generator ']' }
  | MatrixExpression { '[' MatrixRow (_t MatrixRow)* _t? ']' }
  | VectorExpression { '[' sep<',', (!vec (expr | binding<'Assignment'>))> ']' }
  )
}


DoClause { kw<'do'> Parameters { sep1<',', Identifier | operation>? } _t+ block? end }

CallExpression {
  // FIXME: Should broadcast dot be visible?
  (primary-expr (immediateDot '.')? | Operator)
  !primary immediateParen
  '('
  Arguments { sep<',', expr | binding<'KwArg'> | Generator> }
  KeywordArguments { ';' sep<',', expr | binding<'KwArg'>> }?
  ')'
  DoClause?
}

ClosedMacrocallExpression[@name=MacrocallExpression] {
  (MacroIdentifier | [@name=FieldExpression]{ primary-expr immediateDot '.' MacroIdentifier })
  !primary
  ( immediateBracket array
  | immediateBrace BraceExpression
  | immediateParen '(' Arguments { sep<',', expr | binding<'KwArg'>> } ')'
  )
  DoClause?
}

OpenMacrocallExpression[@name=MacrocallExpression] {
  (MacroIdentifier | [@name=FieldExpression]{ primary-expr immediateDot '.' MacroIdentifier })
  MacroArguments { macro-arg[@dynamicPrecedence=-1] { (!macro top-level) }+ }?
}

// Interpolations don't require immediate* rules
InterpExpression[@dynamicPrecedence=1] {
  '$' !quote
  ( Identifier
  | Operator
  | BraceExpression
  | ParenExpression
  | TupleExpression
  | array
  | ClosedMacrocallExpression
  // | OpenMacrocallExpression
  )
}

QuoteExpression[@dynamicPrecedence=1] {
  ':' !quote
  ( immediateBrace BraceExpression
  | immediateParen ParenExpression
  | immediateParen TupleExpression
  | immediateBracket array
  | immediateAt ClosedMacrocallExpression
  // | immediateAt OpenMacrocallExpression // TODO
  | parens<SyntacticOperator>
  )
}

Symbol {
  ':' !quote
  ( immediateIdentifier Identifier
  | Operator // TODO: immediateOperator?
  | SyntacticOperator
  )
}

// OPERATIONS
// TODO: Make operators visible.

operation {
  ( SplatExpression { expr !colon '...' }
  | UnaryExpression {
      ('::' | tilde-operator | type-comparison-operator | unary-operator | unary-plus-operator)
      !unary expr
    }
  | BinaryExpression
  )
}

BinaryExpression {
  ( expr !where      kw<'where'> !where expr
  | expr !decl       '::' expr
  | expr !power      power-operator !power expr
  | expr !bitshift   bitshift-operator !bitshift expr
  | expr !rational   rational-operator !rational expr
  | expr !times      times-operator !times expr
  | expr !plus       (plus-operator | unary-plus-operator | '$') !plus expr
  | expr !colon      (ellipsis-operator | ':') !colon expr
  | expr !pipe-right pipe-right-operator !pipe-right expr
  | expr !pipe-left  pipe-left-operator !pipe-left expr
  | expr !comparison (comparison-operator | type-comparison-operator | membership-operator) !comparison expr
  | expr !lazy-and   lazy-and-operator expr
  | expr !lazy-or    lazy-or-operator expr
  | expr !arrow      arrow-operator !arrow expr
  | expr !pair       pair-operator !pair expr
  )
}

ArrowFunctionExpression { (Identifier | TupleExpression) !afunc '->' !afunc (expr | binding<'Assignment'>) }

// JuxtapositionExpression is non-associative
// TODO: Handle monomials like 3x^2 with the correct precedence
JuxtapositionExpression {
  ( (IntegerLiteral | FloatLiteral) ((!juxt immediateIdentifier primary-expr) | (!juxt immediateParen primary-expr))
  | primary-expr (!juxt immediateIdentifier primary-expr)
  )
  (!juxt immediateIdentifier primary-expr)*
}

TernaryExpression { expr !ternary '?' !ternary expr !ternary ':' !ternary expr }


Operator {
  ( tilde-operator
  | type-comparison-operator
  | unary-operator
  | unary-plus-operator
  | power-operator
  | bitshift-operator
  | rational-operator
  | times-operator
  | plus-operator
  | ellipsis-operator
  | '$'
  | ':'
  | pipe-right-operator
  | pipe-left-operator
  | comparison-operator
  | arrow-operator
  | pair-operator
  )
}

// TODO: membership operators should NOT be highlighted as keywords.
membership-operator { kw<'in'> | kw<'isa'> }

// Operators that cannot be used as identifiers
SyntacticOperator[@name=Operator] {
  ( '.'
  | '::'
  | '...'
  | lazy-and-operator
  | lazy-or-operator
  | '?'
  | '->'
  | assignment-operator
  | eq-operator
  )
}


// STRINGS

string {
  ( StringLiteral
  | CommandLiteral
  | NsStringLiteral {
      ( Identifier immediateDoubleQuote ns<'"', str1-content, '\\"'>
      | Identifier immediateDoubleQuote ns<'"""', str3-content, '\\"'>
      )
      (!juxt immediateIdentifier Identifier)?
    }
  | NsCommandLiteral {
      ( Identifier immediateBackquote ns<'`', cmd1-content, '\\`'>
      | Identifier immediateBackquote ns<'```', cmd3-content, '\\`'>
      )
      (!juxt immediateIdentifier Identifier)?
    }
  )
}

@skip {} {
  // Non-standard string literals don't have interpolations,
  // and only have the most basic escape sequences.
  _s<delim, content> { delim (content)* delim }
  str<delim, content> { _s<delim, content | EscapeSequence> }
  ns<delim, content, esc> { _s<delim, content | '$' | '\\' | [@name=EscapeSequence]{ '\\\\' | esc }> }

  // Commands support the same interpolations as InterpExpression.
  str-interp { '$' (Identifier | Operator | parens<expr>) }
  cmd-interp { '$' (Identifier | Operator | BraceExpression | ParenExpression | TupleExpression | array) }

  StringLiteral { str<'"', str1-content | str-interp> | str<'"""', str3-content | str-interp> }
  CommandLiteral { str<'`', cmd1-content | cmd-interp> | str<'```', cmd3-content | cmd-interp> }

  // Rules that should be tokens, but aren't...
  BlockComment { block-comment-start (block-comment-content | '#' | '=' | BlockComment)* '=#' }
  MacroIdentifier { '@' (Identifier | Operator | SyntacticOperator) }
}

// immediateIdentifier must be listed _before_ identifier.
// The order of external tokens matters!
@external tokens immediate from "./tokens.js" {
  immediateDot,
  immediateColon,
  immediateAt,
  immediateBrace,
  immediateBracket,
  immediateParen,
  immediateBackquote,
  immediateDoubleQuote,
  immediateQuote,
  immediateIdentifier
}
@external tokens Identifier from "./tokens.js" { Identifier }
@external tokens terminator from "./tokens.js" { _t }

@tokens {
  // OPERATORS

  bdot<tokens> { '.'? tokens } // Broadcasting dot

  suffix { $[²³¹ʰʲʳʷʸˡˢˣᴬᴮᴰᴱᴳᴴᴵᴶᴷᴸᴹᴺᴼᴾᴿᵀᵁᵂᵃᵇᵈᵉᵍᵏᵐᵒᵖᵗᵘᵛᵝᵞᵟᵠᵡᵢᵣᵤᵥᵦᵧᵨᵩᵪᶜᶠᶥᶦᶫᶰᶸᶻᶿ′″‴‵‶‷⁗⁰ⁱ⁴⁵⁶⁷⁸⁹⁺⁻⁼⁽⁾ⁿ₀₁₂₃₄₅₆₇₈₉₊₋₌₍₎ₐₑₒₓₕₖₗₘₙₚₛₜⱼⱽ] }
  op<tokens> { bdot<tokens> suffix? }

  // Unary prefix operators
  tilde-operator { op<'~'> } // unary / assignment
  type-comparison-operator { op<'<:' | '>:'> } // unary / comparison
  unary-operator { op<'!' | $[¬√∛∜]> }
  unary-plus-operator { op<$[-+] | $[±∓]> }

  // Binary operators
  power-operator { op<'^' | $[↑↓⇵⟰⟱⤈⤉⤊⤋⤒⤓⥉⥌⥍⥏⥑⥔⥕⥘⥙⥜⥝⥠⥡⥣⥥⥮⥯￪￬]> }
  bitshift-operator { op<'<<' | '>>' | '>>>'> }
  rational-operator { op<'//'> }
  times-operator { op<$[*/%&\\] | $[⌿÷··⋅∘×∩∧⊗⊘⊙⊚⊛⊠⊡⊓∗∙∤⅋≀⊼⋄⋆⋇⋉⋊⋋⋌⋏⋒⟑⦸⦼⦾⦿⧶⧷⨇⨰⨱⨲⨳⨴⨵⨶⨷⨸⨻⨼⨽⩀⩃⩄⩋⩍⩎⩑⩓⩕⩘⩚⩜⩞⩟⩠⫛⊍▷⨝⟕⟖⟗⨟]> }
  plus-operator { op<'++' | '|' | $[−¦⊕⊖⊞⊟∪∨⊔∔∸≏⊎⊻⊽⋎⋓⟇⧺⧻⨈⨢⨣⨤⨥⨦⨧⨨⨩⨪⨫⨬⨭⨮⨹⨺⩁⩂⩅⩊⩌⩏⩐⩒⩔⩖⩗⩛⩝⩡⩢⩣]> }
  ellipsis-operator { op<$[…⁝⋮⋱⋰⋯]> } // TODO: `..` conflicts with ImportPath
  pipe-right-operator { op<'|>'> }
  pipe-left-operator { op<'<|'> }
  comparison-operator { op<'>=' | '<=' | '==' | '===' | '!=' | '!==' | $[><] | $[≥≤≡≠≢∈∉∋∌⊆⊈⊂⊄⊊∝∊∍∥∦∷∺∻∽∾≁≃≂≄≅≆≇≈≉≊≋≌≍≎≐≑≒≓≖≗≘≙≚≛≜≝≞≟≣≦≧≨≩≪≫≬≭≮≯≰≱≲≳≴≵≶≷≸≹≺≻≼≽≾≿⊀⊁⊃⊅⊇⊉⊋⊏⊐⊑⊒⊜⊩⊬⊮⊰⊱⊲⊳⊴⊵⊶⊷⋍⋐⋑⋕⋖⋗⋘⋙⋚⋛⋜⋝⋞⋟⋠⋡⋢⋣⋤⋥⋦⋧⋨⋩⋪⋫⋬⋭⋲⋳⋴⋵⋶⋷⋸⋹⋺⋻⋼⋽⋾⋿⟈⟉⟒⦷⧀⧁⧡⧣⧤⧥⩦⩧⩪⩫⩬⩭⩮⩯⩰⩱⩲⩳⩵⩶⩷⩸⩹⩺⩻⩼⩽⩾⩿⪀⪁⪂⪃⪄⪅⪆⪇⪈⪉⪊⪋⪌⪍⪎⪏⪐⪑⪒⪓⪔⪕⪖⪗⪘⪙⪚⪛⪜⪝⪞⪟⪠⪡⪢⪣⪤⪥⪦⪧⪨⪩⪪⪫⪬⪭⪮⪯⪰⪱⪲⪳⪴⪵⪶⪷⪸⪹⪺⪻⪼⪽⪾⪿⫀⫁⫂⫃⫄⫅⫆⫇⫈⫉⫊⫋⫌⫍⫎⫏⫐⫑⫒⫓⫔⫕⫖⫗⫘⫙⫷⫸⫹⫺⊢⊣⟂⫪⫫]> }
  arrow-operator { op<'-->' | '<--' | '<-->' | $[←→↔↚↛↞↠↢↣↦↤↮⇎⇍⇏⇐⇒⇔⇴⇶⇷⇸⇹⇺⇻⇼⇽⇾⇿⟵⟶⟷⟹⟺⟻⟼⟽⟾⟿⤀⤁⤂⤃⤄⤅⤆⤇⤌⤍⤎⤏⤐⤑⤔⤕⤖⤗⤘⤝⤞⤟⤠⥄⥅⥆⥇⥈⥊⥋⥎⥐⥒⥓⥖⥗⥚⥛⥞⥟⥢⥤⥦⥧⥨⥩⥪⥫⥬⥭⥰⧴⬱⬰⬲⬳⬴⬵⬶⬷⬸⬹⬺⬻⬼⬽⬾⬿⭀⭁⭂⭃⥷⭄⥺⭇⭈⭉⭊⭋⭌￩￫⇜⇝↜↝↩↪↫↬↼↽⇀⇁⇄⇆⇇⇉⇋⇌⇚⇛⇠⇢↷↶↺↻]> }
  pair-operator { op<'=>'> }

  // Binary syntactic operators (broadcast dot, but no suffixes)
  lazy-and-operator { bdot<'&&'> }
  lazy-or-operator { bdot<'||'> }
  eq-operator { bdot<'='> }
  assignment-operator { ':=' | '$=' | bdot<(bitshift-operator | '//' | $[-+*/\\^÷%|&⊻]) '=' | $[≔⩴≕]> }

  @precedence { assignment-operator, unary-plus-operator }


  // NUMBERS

  numeral<n> { n (n | '_' n)* }
  dec { $[0-9] }
  hex { $[0-9A-Fa-f] }
  exp { $[Eef] $[+-]? dec+ }
  hex-exp { 'p' $[+-]? dec+ }

  FloatLiteral {
    numeral<dec> ('.' numeral<dec>? exp? | exp)
    | '.' numeral<dec> exp?
    | '0x' numeral<hex> '.'? numeral<hex>? hex-exp
    | '0x.' numeral<hex> hex-exp
  }

  IntegerLiteral {
    numeral<dec>
    | '0b' numeral<$[01]>
    | '0o' numeral<$[0-7]>
    | '0x' numeral<hex>
  }

  @precedence { FloatLiteral, '.', IntegerLiteral } // dot vs decimals, and floats vs integers


  // CHARACTERS & STRING CONTENT

  EscapeSequence {
    '\\'
    ( $[uU] hex (hex (hex hex?)?)?
    | 'x' hex hex
    | $[0-7] $[0-7] $[0-7]
    | ![xuU]
    | '\\'
    )
  }

  CharLiteral { "'" (![\\'] | EscapeSequence) "'" }

  str1-content { !["$\\] }
  cmd1-content { ![`$\\] }
  str3-content { (str1-content | '"' (str1-content | '"' str1-content))+ }
  cmd3-content { (cmd1-content | '`' (cmd1-content | '`' cmd1-content))+ }


  // COMMENTS & WHITESPACE

  LineComment { '#' ![=\n]? ![\n]* }
  block-comment-content { ![#=] }
  block-comment-start { '#=' }
  _ws { @whitespace+ }

  @precedence { block-comment-start, LineComment }
}

